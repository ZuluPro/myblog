server {
    listen 80;
    server_name media.{{ server_url }}; 

    # Log
    access_log off; log_not_found off;

    location ~ ^/media/ {
        root  /var/www/;
        autoindex off;
        add_header Pragma public;
        add_header Cache-Control "public, must-revalidate, proxy-revalidate";
    }
}

server {
    listen 443 ssl;
    server_name media.{{ server_url }}; 

    # Log
    access_log off; log_not_found off;

